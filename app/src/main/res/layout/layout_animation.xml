<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/rdListAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbScale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scale" />

        <RadioButton
            android:id="@+id/rbRotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate" />

        <RadioButton
            android:id="@+id/rbSlideIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slide in" />

        <RadioButton
            android:id="@+id/rbSlideOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slide out" />

        <RadioButton
            android:id="@+id/rbSlideDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slide down" />

        <RadioButton
            android:id="@+id/rbFadeIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fade in" />


        <RadioButton
            android:id="@+id/rbFadeout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fade out" />
    </RadioGroup>

    <View
        android:id="@+id/vObject"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="#80DEEA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>